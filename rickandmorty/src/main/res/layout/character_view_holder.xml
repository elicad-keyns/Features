<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/xxx_tiny"
    android:elevation="@dimen/xxx_tiny"
    app:cardCornerRadius="@dimen/xxx_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/character_image"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/subtitle_text"/>

        <TextView
            android:id="@+id/character_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/xxx_tiny"
            android:layout_marginTop="@dimen/xxx_tiny"
            android:text="Rick Mortinez"
            style="@style/TextAppearance.MdcTypographyStyles.Headline6"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/character_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alive"
                android:layout_marginHorizontal="@dimen/xxx_tiny"
                style="@style/TextAppearance.MdcTypographyStyles.Caption"/>

            <View
                android:layout_width="6dp"
                android:layout_height="1dp"
                android:background="@color/subtitle_text"/>

            <TextView
                android:id="@+id/character_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Human"
                android:layout_marginHorizontal="@dimen/xxx_tiny"
                style="@style/TextAppearance.MdcTypographyStyles.Caption"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last location:"
            android:layout_marginTop="@dimen/xxx_tiny"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.MdcTypographyStyles.Overline"/>

        <TextView
            android:id="@+id/character_last_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Citadel of Ricks"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First seen in:"
            android:layout_marginTop="@dimen/xxx_tiny"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.MdcTypographyStyles.Overline"/>

        <TextView
            android:id="@+id/character_first_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forbodulon Prime"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_marginBottom="@dimen/xxx_tiny"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>