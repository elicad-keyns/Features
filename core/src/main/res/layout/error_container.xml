<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/error_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_text"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_error_text" />

    <TextView
        android:id="@+id/error_reload"
        style="@style/TextAppearance.MdcTypographyStyles.Overline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xxx_tiny"
        android:drawablePadding="@dimen/xxx_tiny"
        android:gravity="center_vertical"
        android:padding="@dimen/xxx_tiny"
        android:text="@string/reload"
        app:drawableStartCompat="@drawable/ic_refresh" />

</LinearLayout>